<% if(detail != null ) { %>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%- detail.name %></li>
    </ol>
  </nav>


  <div class="row">

    <div class="col-12 col-md-4">
      <img src="/uploads/<%- detail.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- detail.name %>" loading="lazy">
    </div>

    <div class="col-12 col-md-8">
      <div class="row">
        <div class="col-12"><h1><%- detail.name %></h1></div>
        <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- detail.category %></div>
        <div class="col-12" style="white-space: pre-line;">
          <h4> Photo Details </h4>
          <%- detail.description %>
        </div>
      </div>


    </div>
  </div>
<% } else { %>
  <p>No item found.</p>
<% } %>